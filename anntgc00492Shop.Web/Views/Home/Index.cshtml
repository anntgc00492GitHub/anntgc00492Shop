@model anntgc00492Shop.Web.Models.HomeViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MyLayout.cshtml";
} 

@{Html.RenderAction("Category", "Home");}
<div class="shoes-grid">
    <!--Slide-->
    <div class="wrap-in">
        <a href="single.html">
        </a><div class="wmuSlider example1 slide-grid" style="overflow: hidden; height: 425.924px;">
                <div class="wmuSliderWrapper">
                    @foreach (var slide in Model.Slides)
                    {
                        <article style="position: absolute; width: 100%; opacity: 0;">
                            <div class="banner-matter">
                                <div class="col-md-5 banner-bag">
                                    <img class="img-responsive " src="@slide.Image" alt="@slide.Name">
                                </div>
                                <div class="col-md-7 banner-off">
                                    @Html.Raw(slide.Description)
                                </div>
                                <div class="clearfix"> </div>
                            </div>
                        </article>
                    }
                </div>
            @*2 the a o duoi ket hoi voi the ul li tao thanh mot bo khong xoa*@
            <a class="wmuSliderPrev">Previous</a>
            <a class="wmuSliderNext">Next</a>
            <ul class="wmuSliderPagination">
                @for (int i = 0; i < Model.Slides.Count(); i++)
                {
                    <li><a href="#" class="">i</a></li>
                }
            </ul>
            <script src="/Assets/client/js/jquery.wmuSlider.js"></script>
            <script>
                $('.example1').wmuSlider();
            </script>
        </div>
    </div>

    <!--Spk1-->

    <div class="shoes-grid-left">
        @{
            var j = 0;
            foreach (var product in Model.TopSaleProducts)
            {
                j = j + 1;
                 var url = "/san-pham/chi-tiet-" + product.Alias + "/" + product.Id;
                <a href="@url">
                    <div class="col-md-6 con-sed-grid  @if (j%2 == 0)
                                                       {
                                                           @Html.Raw("grid-top-chain");
                                                       }  ">
                        <div class=" elit-grid">
                            <h4>consectetur elit</h4>
                            <label>@product.Price</label>
                            <p>@Html.Raw(product.Description)</p>
                            <span class="on-get">GET NOW</span>
                        </div>
                        <img class="img-responsive shoe-left" src="@product.Image" alt="@product.Alias">
                        <div class="clearfix"></div>
                    </div>
                </a>
            }
        }
    </div>

    <!--Spk2-->
    <div class="products">
        <h5 class="latest-product">LATEST PRODUCTS</h5>
        <a class="view-all" href="product.html">VIEW ALL<span> </span></a>
    </div>
    <div class="product-left">
        @{
            var k = 0;
            foreach (var product in Model.LastestProducts)
            {
                k = k + 1;
                var url = "/san-pham/chi-tiet-" + product.Alias + "/" + product.Id;
                <div class="col-md-4 chain-grid @if (k%3 == 0){ @Html.Raw("grid-top-chain");} ">
                    <a href="@url">
                        <img class="img-responsive chain" src="@product.Image" alt=" ">
                    </a>
                    <span class="star"> </span>
                    <div class="grid-chain-bottom  grid-top-chain">
                        <h6><a href="single.html">@product.Name</a></h6>
                        <div class="star-price">
                            <div class="dolor-grid">
                                <span class="actual">@product.Price.ToString("N0")</span>
                                @if (product.PromotionPrice.HasValue)
                                {
                                    <span class="reducedfrom">@product.PromotionPrice</span>
                                }
                                <span class="rating">
                                    <input type="radio" class="rating-input" id="rating-input-1-5" name="rating-input-1">
                                    <label for="rating-input-1-5" class="rating-star1"> </label>
                                    <input type="radio" class="rating-input" id="rating-input-1-4" name="rating-input-1">
                                    <label for="rating-input-1-4" class="rating-star1"> </label>
                                    <input type="radio" class="rating-input" id="rating-input-1-3" name="rating-input-1">
                                    <label for="rating-input-1-3" class="rating-star"> </label>
                                    <input type="radio" class="rating-input" id="rating-input-1-2" name="rating-input-1">
                                    <label for="rating-input-1-2" class="rating-star"> </label>
                                    <input type="radio" class="rating-input" id="rating-input-1-1" name="rating-input-1">
                                    <label for="rating-input-1-1" class="rating-star"> </label>
                                </span>
                            </div>
                            <a class="now-get get-cart" href="#">Mua hàng</a>
                            <div class="clearfix"> </div>
                        </div>
                    </div>
                </div>
            }
            <div class="clearfix"> </div>
        }
    </div>
    <div class="clearfix"></div>
</div>
